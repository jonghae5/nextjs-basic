{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier", // new
    "prettier/@typescript-eslint", // new
    "prettier/react" // new
  ],
  "plugins": [
    "import",
    "react",
    "react-hooks"
  ],
  "rules":{
    "prettier/prettier": ["error"]
  }
}